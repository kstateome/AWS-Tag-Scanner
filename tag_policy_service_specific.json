{
  "tag_policy": {
    "name": "KSU AWS Tagging Policy - Service-Specific",
    "version": "1.0",
    "last_updated": "2025-11-25",
    "description": "Service-specific tagging requirements - different tags for different AWS services",
    "workstreams": ["Landing Zone", "Security", "Operations"],
    
    "core_tags": {
      "description": "Core tags required for ALL resources regardless of service type",
      "tags": [
        {
          "key": "Name",
          "workstream": "Operations",
          "description": "Resource identifier for console visibility",
          "allowed_values": null,
          "case_sensitive": false
        },
        {
          "key": "department",
          "workstream": "Landing Zone",
          "description": "Department that owns the resource",
          "allowed_values": null,
          "case_sensitive": false
        },
        {
          "key": "environment",
          "workstream": "Operations",
          "description": "Deployment environment (dev/test/prod)",
          "allowed_values": ["dev", "test", "prod"],
          "case_sensitive": false
        },
        {
          "key": "application",
          "workstream": "Operations",
          "description": "Application that the resource supports",
          "allowed_values": null,
          "case_sensitive": false
        }
      ]
    },
    
    "service_specific_requirements": {
      "EC2": {
        "description": "EC2 Instances - Compute resources requiring comprehensive tagging",
        "required_tags": [
          "Name",
          "customer",
          "department",
          "environment",
          "application",
          "servicescope",
          "function",
          "technical-contact",
          "backup",
          "critical-list",
          "criticality",
          "Patch Group"
        ],
        "recommended_tags": [
          "rebill",
          "data-priority",
          "os",
          "location",
          "maintenance-window",
          "Scheduler"
        ],
        "notes": "EC2 instances are core compute - require most tags for ops/security"
      },
      
      "RDS": {
        "description": "RDS Database Instances - Data resources requiring strict security tagging",
        "required_tags": [
          "Name",
          "customer",
          "department",
          "environment",
          "application",
          "servicescope",
          "data-priority",
          "technical-contact",
          "backup",
          "critical-list",
          "criticality"
        ],
        "recommended_tags": [
          "rebill",
          "data-compliance",
          "backup-retention",
          "backup-schedule",
          "maintenance-window"
        ],
        "notes": "RDS stores data - security and backup tags are critical. No Patch Group (AWS managed)"
      },
      
      "S3": {
        "description": "S3 Buckets - Storage resources with lighter requirements",
        "required_tags": [
          "Name",
          "department",
          "environment",
          "application",
          "data-priority"
        ],
        "recommended_tags": [
          "customer",
          "servicescope",
          "technical-contact",
          "data-compliance",
          "backup",
          "rebill"
        ],
        "notes": "S3 buckets are storage - fewer operational tags needed. Focus on data classification."
      },
      
      "Lambda": {
        "description": "Lambda Functions - Serverless compute with minimal ops overhead",
        "required_tags": [
          "Name",
          "department",
          "environment",
          "application",
          "function"
        ],
        "recommended_tags": [
          "customer",
          "servicescope",
          "technical-contact",
          "criticality"
        ],
        "notes": "Lambda is serverless - no patching/backup needed. Focus on identification tags."
      },
      
      "ELB": {
        "description": "Elastic Load Balancers - Network resources",
        "required_tags": [
          "Name",
          "department",
          "environment",
          "application",
          "wafv2"
        ],
        "recommended_tags": [
          "customer",
          "servicescope",
          "technical-contact",
          "critical-list",
          "criticality"
        ],
        "notes": "Load balancers are entry points - WAF and identification tags are key. No patching/backup."
      },
      
      "EBS": {
        "description": "EBS Volumes - Block storage attached to EC2",
        "required_tags": [
          "Name",
          "department",
          "environment",
          "application",
          "backup"
        ],
        "recommended_tags": [
          "customer",
          "backup-retention",
          "backup-schedule",
          "data-priority"
        ],
        "notes": "EBS volumes inherit most context from EC2. Focus on backup tags."
      }
    },
    
    "all_tags_reference": {
      "description": "Complete list of all possible tags with descriptions",
      "tags": [
        {
          "key": "Name",
          "description": "Resource identifier",
          "applies_to": ["All services"]
        },
        {
          "key": "customer",
          "description": "Customer/consumer of the resource",
          "applies_to": ["EC2", "RDS"]
        },
        {
          "key": "department",
          "description": "Owning department",
          "applies_to": ["All services"]
        },
        {
          "key": "environment",
          "description": "Deployment environment (dev/test/prod)",
          "applies_to": ["All services"]
        },
        {
          "key": "application",
          "description": "Application name",
          "applies_to": ["All services"]
        },
        {
          "key": "servicescope",
          "description": "Impact boundary (Dept-Internal/ITS-Internal/University-Wide)",
          "applies_to": ["EC2", "RDS"]
        },
        {
          "key": "rebill",
          "description": "Chargeback indicator (Y/N)",
          "applies_to": ["EC2", "RDS", "S3"]
        },
        {
          "key": "function",
          "description": "Server role (web/app/db/etc)",
          "applies_to": ["EC2", "Lambda"]
        },
        {
          "key": "data-priority",
          "description": "Data classification (public/non-sensitive/pii)",
          "applies_to": ["RDS", "S3", "EBS"]
        },
        {
          "key": "technical-contact",
          "description": "Incident notification contact",
          "applies_to": ["EC2", "RDS", "ELB"]
        },
        {
          "key": "wafv2",
          "description": "WAF rules (exclude-all/php/windows/default)",
          "applies_to": ["ELB"]
        },
        {
          "key": "backup",
          "description": "Backup indicator (Yes/No)",
          "applies_to": ["EC2", "RDS", "EBS"]
        },
        {
          "key": "critical-list",
          "description": "K-State critical resources (Y/N)",
          "applies_to": ["EC2", "RDS", "ELB"]
        },
        {
          "key": "criticality",
          "description": "DR tier (0-3)",
          "applies_to": ["EC2", "RDS", "Lambda", "ELB"]
        },
        {
          "key": "Patch Group",
          "description": "AWS Systems Manager patch group",
          "applies_to": ["EC2"]
        },
        {
          "key": "os",
          "description": "Operating system",
          "applies_to": ["EC2"]
        },
        {
          "key": "location",
          "description": "AWS account type",
          "applies_to": ["EC2"]
        },
        {
          "key": "Scheduler",
          "description": "Auto power management",
          "applies_to": ["EC2"]
        },
        {
          "key": "data-compliance",
          "description": "Compliance type (hipaa/pcidss/nist171)",
          "applies_to": ["RDS", "S3"]
        },
        {
          "key": "backup-retention",
          "description": "Backup retention in days",
          "applies_to": ["RDS", "EBS"]
        },
        {
          "key": "backup-schedule",
          "description": "Backup schedule",
          "applies_to": ["RDS", "EBS"]
        },
        {
          "key": "maintenance-window",
          "description": "Maintenance window for updates",
          "applies_to": ["EC2", "RDS"]
        }
      ]
    },
    
